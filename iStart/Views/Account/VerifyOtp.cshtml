@model VerifyOtpViewModel

<h2>Verify OTP</h2>

<form asp-action="VerifyOtp" method="post">
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label>OTP</label>
        <input asp-for="Otp" class="form-control" required />
    </div>
    <div class="form-group mt-2">
        <label>New Password</label>
        <input asp-for="NewPassword" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-3">Reset Password</button>

    @if (ViewBag.Error != null)
    {
        <p class="text-danger mt-2">@ViewBag.Error</p>
    }
</form>
